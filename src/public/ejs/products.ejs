<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" href="#">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Store</title>
</head>
<body>
    <div>
    <% if (!user) { %>
        <h1>You are not logged in</h1>
        <p><a href="/login">Log in</a> or <a href="/register">register</a></p>
        <% }else{ %>
            <div>
                <h2>Welcome, <%= user.name %></h2>
            </div>
            <img width="100" height="100" src=<%= user.imageURL %> alt="" srcset="">
            <p>Email: <%= user.email %></p>
            <a href="/cart"><button>My cart</button></a>
            <a id="logout"><button>Logout</button></a>
            <% } %>
        </div>
        <div>
            <% if (products.length === 0) { %>
                <h1>No hay productos para mostrar</h1>
                <% }else{ %>
                    <% products.forEach(product=>{ %>
                        <div>
                            <h3><%=product.title%></h3>
                            <img width="200" height="200" src=<%=product.thumbnail%> alt="" srcset="">
                            <p><%=product.description%></p>
                            <p>Stock: <%=product.stock%></p>
                            <h3>$<%=product.price%></h3>
                            <% if (user) { %>
                                <form id="formId" action="/products/<%=product.id%>" method="post">
                            <input type="submit" value="Add to cart"></input>
                        </form>
                            <% }else{ %>
                                <button disabled="disabled">Log in to add to cart</button>
                                <% } %> 
                        </div>
                        <br>
                        <br>
                    <%})%>
                    <%}%>
        </div>
        <% if (user) { %>
            <script>
                const user = "<%= user.name %>"
            </script>
            <% } %>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="../js/products.js"></script>
</body>
</html>